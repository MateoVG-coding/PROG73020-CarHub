@{
    ViewData["Title"] = "My Listing Page";
}

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h4>Listings:</h4>
        <ul id="listingItemsList">
        </ul>
        <p id="listingItemsMsg" class="mt-3"></p>
    </div>

    <div class="col-sm-12 col-md-6">
        <h4>Add a listing:</h4>

        <form>
            <div class="form-group">
                <label for="carBrand">Car Brand:</label>
                <input type="text" id="carBrand" name="carBrand" class="form-control" />
            </div>

            <div class="form-group">
                <label for="carModel">Car Model:</label>
                <input type="text" id="carModel" name="carModel" class="form-control" />
            </div>

            <div class="form-group">
                <label for="carYear">Car Year:</label>
                <input type="number" id="carYear" name="carYear" class="form-control" />
            </div>

            <div class="form-group">
                <label for="listingValue">Listing Value:</label>
                <input type="number" id="listingValue" name="listingValue" class="form-control" />
            </div>

            <div class="form-group">
                <label for="listingDescription">Description:</label>
                <input type="text" id="listingDescription" name="listingDescription" class="form-control" />
            </div>

            <button id="addListingBtn" type="button" class="btn btn-primary">Add</button>
        </form>
        <p id="newListingItemMsg" class="mt-3"></p>
    </div>
</div>
